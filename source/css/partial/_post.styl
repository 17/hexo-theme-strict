.post
  overflow: hidden
  margin-top: 30px
  background-color: #FFFFFF
  box-shadow: 1px 2px 3px #DDDDDD

.post__head
  margin: 60px

.post__time
  color: #CCCCCC
  font-size-rem(12)

.post__title
  margin-top: 5px
  line-height: 1.3
  font-size-rem(30)
  font-weight: normal
  > a
    color: #666666

.post__image
  display: block
  margin: 60px 0

.post__main
  margin: 60px
  .highlight
    margin: 1.6em -60px
    padding: 1.6em
    figcaption
      padding: 0 30px
    table
      margin: 0
      width: auto
      border: none
    td
    th
      border: none
  blockquote
    margin: 1.6em -60px
    padding: 1.6em 60px
    border-left: 5px solid #DDDDDD
    background-color: #EEEEEE

  img
    display: block
    margin: 1.6em auto
  table
    // margin: 30px 0

.post__foot
  padding: 30px
  border-top: 1px solid #DDDDDD
  background-color: #FAFAFA

.post__foot-link
  padding: 10px
  color: #999999
  font-size-rem(12)

.post__tag__item
  display: inline-block

.post__tag__link
  @extend .post__foot-link
  display: block
  &:hover
    color: #666666
  &:before 
    content: "#"

.post__more
  @extend .post__foot-link
  padding: 10px 20px
  border: 1px solid #BBBBBB
  border-radius: 3px
  background-color: #CCCCCC
  color: #FFFFFF
  &:hover
    background-color: #DDDDDD