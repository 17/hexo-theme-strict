.post
  overflow: hidden
  margin-top: 30px
  background-color: #FFFFFF
  box-shadow: 1px 2px 3px #DDDDDD

.post__head
  margin: 60px

.post__time
  color: #CCCCCC
  font-size-rem(12)

.post__title
  margin-top: 5px
  line-height: 1.3
  // 1.6 * 16
  font-size-rem(25.6)
  font-weight: normal
  > a
    color: #666666

.post__image
  display: block
  margin: 60px 0
  > img
    width: 100%

.post__main
  margin: 60px
  .highlight
    margin: 1.6em -60px
    padding: 30px
    figcaption
      padding: 0 30px
    table
      margin: 0
      width: auto
      border: none
    td
    th
      border: none
    pre
      margin: 0
  h1
    // 1.6 * 16
    font-size-rem(25.6)
  h2
    // 1.4 * 16
    font-size-rem(22.4)
  h3
    // 1.2 * 16
    font-size-rem(19.2)
  blockquote
    margin: 1.6em -60px
    padding: 30px 60px
    border-left: 5px solid #DDDDDD
    background-color: #EEEEEE
  img
    display: block
    margin: 1.6em auto

.post__foot
  padding: 30px 60px
  border-top: 1px solid #DDDDDD
  background-color: #FAFAFA

.post__foot-link
  padding: 10px
  color: #999999
  font-size-rem(12)

.post__tag__item
  display: inline-block

.post__tag__link
  @extend .post__foot-link
  display: block
  &:hover
    color: #666666
  &:before 
    content: "#"

.post__more
  @extend .post__foot-link
  padding: 10px 20px
  border: 1px solid #BBBBBB
  border-radius: 3px
  background-color: #CCCCCC
  color: #FFFFFF
  &:hover
    background-color: #DDDDDD