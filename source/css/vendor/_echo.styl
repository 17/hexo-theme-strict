/*36/30/24/18/14*/
.echo
  font-size-rem(14)
  line-height: 1.6em
  a
    color: $base-link-color
    &:hover, &:focus, &:active
      text-decoration: underline
  h1
  h2
  h3
  h4
  h5
  h6
    font-weight: normal
    line-height: 1.3
    margin: 1em 0
  h1
    font-size-rem(30)
  h2
    font-size-rem(24)
  h3
    font-size-rem(18)
  h4
  h5
  h6
    font-size-rem(14)
  p
    margin: 1em 0
  ol
  ul
  dl
  hr
  img
  pre
  form
  table
  figure
  address
  blockquote
    margin: 1.6em 0
  hr
    margin: 1.6em auto
    width: 61%
    height: 4px
    border: none
    background: #EEEEEE
  img
    max-width: 100%
    height: auto
  table
    width: 100%
  caption
    text-transform: uppercase
    padding: 1em
    color: #777777
  thead
    background-color: #EEEEEE
  th
  td 
    border: 1px solid #cbcbcb
    padding: .5em 1em
    text-align: left
    font-weight: normal
  tfoot
    background-color: #f4f4f4
  ol, ul, dl
    margin-left:2em
  ol
    list-style: decimal outside
  ul
    list-style: disc outside
  dt
    font-weight: bold
  dd
    margin-left: 1em
  figcaption
    font-size: .85em
  blockquote small,
  cite 
    color: #777
  abbr
    cursor:help
  address
    font-style: normal
  code
    display: inline-block
    margin: 0 .1em
    padding: .1em .6em
    border: 1px solid #CCCCCC
    border-radius: 3px
    background-color: #F7F7F7
    text-shadow: 0 1px 0 #FFFFFF
    white-space: nowrap
    font-size: 0.85em
    line-height: 1.2
  kbd
    @extend .echo code
    box-shadow: 0 1px 0px rgba(0, 0, 0, 0.2), 0 0 0 2px #FFFFFF inset
  blockquote
    padding: 1.6em
    border-left: 5px solid #DDDDDD
    background-color: #EEEEEE

// normalize
.echo
  mark
    background: #ff0

  abbr[title]
    border-bottom: 1px dotted

  b
  strong
    font-weight: bold

  small
    font-size: 80%

  sub
  sup
    font-size: 75%
    line-height: 0
    position: relative
    vertical-align: baseline

  sup
    top: -0.5em

  sub
    bottom: -0.25em

  img
    border: 0

  table
    border-collapse: collapse
    border-spacing: 0